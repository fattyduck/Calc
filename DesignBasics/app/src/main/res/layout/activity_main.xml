<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="1"
        android:id="@+id/oneButton"
        android:onClick="clickFunc"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oneButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewOne"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_centerHorizontal="true"
        android:id="@+id/twoButton"
        android:layout_below="@+id/textViewOne"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twoButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewtwo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_centerHorizontal="true"
        android:id="@+id/threeButton"
        android:layout_below="@id/textViewtwo"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/threeButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewThree"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/oneButton"
        android:layout_marginTop="100dp"
        android:text="R1"
        android:id="@+id/r1button"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1button"
        android:layout_toRightOf="@+id/textViewtwo"
        android:id="@+id/r1TextView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/twoButton"
        android:layout_below="@+id/r1TextView"
        android:text="R2"
        android:id="@+id/r2button"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r2button"
        android:layout_toRightOf="@id/textViewtwo"
        android:id="@+id/r2TextView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/threeButton"
        android:layout_below="@+id/r2TextView"
        android:text="R3"
        android:id="@+id/r3button"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r3button"
        android:layout_toRightOf="@id/textViewThree"
        android:id="@+id/r3TextView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
