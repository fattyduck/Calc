<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:text="@string/zero"
            android:textSize="50sp"
            />
    </LinearLayout>

    <!--//first row: c, division, multiplication, backspace-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_weight="1">
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/help"
            android:textSize="25sp"
            android:id="@+id/help"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/Deg"
            android:textSize="25sp"
            android:id="@+id/deg"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/permutation"
            android:textSize="25sp"
            android:id="@+id/perm"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/openParen"
            android:textSize="25sp"
            android:id="@+id/openParen"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/closeParen"
            android:textSize="25sp"
            android:id="@+id/closeParen"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/modulo"
            android:textSize="25sp"
            android:id="@+id/modulo"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/clear"
            android:textSize="25sp"
            android:id="@+id/clear"/>
    </LinearLayout>

    //second row: 7, 8, 9, minus
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/black"
        >
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/inv"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/inv"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/sin"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/sin"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/ln"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/ln"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/seven"
            android:textSize="25sp"
            android:background="@color/denim"
            android:id="@+id/seven"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/eight"
            android:textSize="25sp"
            android:background="@color/denim"
            android:id="@+id/eight"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/nine"
            android:textSize="25sp"
            android:background="@color/denim"
            android:id="@+id/nine"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dividedBy"
            android:textSize="25sp"
            android:id="@+id/div"/>


    </LinearLayout>

    //third row: 4,5,6,+
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/black"
        >
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/pi"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/pi"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/cosine"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/cos"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/log"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/log"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/four"
            android:textSize="25sp"
            android:background="@color/denim"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/five"
            android:textSize="25sp"
            android:background="@color/denim"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/six"
            android:textSize="25sp"
            android:background="@color/denim"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/times"
            android:textSize="25sp"
            android:id="@+id/multiply"/>
    </LinearLayout>

    //fourth row: 1,2,3,()
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/black"
        >
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/e"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/e"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/tan"
            android:textSize="25sp"
            android:layout_weight="1"
            android:id="@+id/tan"
            android:background="@color/greydenim"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/squareroot"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/sqrt"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/one"
            android:textSize="25sp"
            android:id="@+id/one"
            android:background="@color/denim"/>
        />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/two"
            android:textSize="25sp"
            android:id="@+id/two"
            android:background="@color/denim"/>
        />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/three"
            android:textSize="25sp"
            android:id="@+id/three"
            android:background="@color/denim"/>
        />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/minus"
            android:textSize="25sp"
            android:id="@+id/minus"/>

    </LinearLayout>

    //fifth row: Ans, EXP, x^y, 0, decimal, =, +
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/black">
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/tip"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/tip"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/exp"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/exp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/power"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/power"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/zero2"
            android:textSize="25sp"
            android:layout_weight="1"
            android:id="@+id/zero"
            android:background="@color/denim"
            />
        />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/point"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/denim"
            android:id="@+id/point"/>
        />

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/equals"
            android:textSize="25sp"
            android:background="@color/denim"
            android:id="@+id/equals"/>
        />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/plus"
            android:textSize="25sp"
            android:id="@+id/plus"/>
    </LinearLayout>

</LinearLayout>
